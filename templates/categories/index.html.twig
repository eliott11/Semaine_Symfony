{% extends 'base.html.twig' %}

{% block title %}Hello Controller !'{% endblock %}

{% block body %}

    <div class="container">
        {% for article in articles %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{article.title}}</h5>
                    <h5 class="card-text">{{article.description}}</h5>
                    <h5 class="card-text">{{article.createdAt | date('d/m/Y H:i:s')}}</h5>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="container mt-5">
        {{ form_start(articleForm) }}

    </div>



{% endblock %}
